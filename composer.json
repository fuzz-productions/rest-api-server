{
	"name": "fuzz/api-server",
	"description": "A framework for rapid REST API development.",
	"license": "MIT",
	"authors": [
		{
			"name": "Fuzz Productions",
			"email": "opensource@fuzzproductions.com"
		}
	],
	"require": {
		"php": ">=7.2",
		"laravel/framework": "5.5.* || 5.6.* || 5.7.* || 5.8.* || 6.0.*",
		"fuzz/laravel-data": "1.2.x-dev as 1.2",
		"fuzz/laravel-oauth": "1.2.x-dev as 1.2",
		"fuzz/magic-box": "1.3.x-dev as 1.3",
		"fuzz/http-exception": "1.1.x-dev as 1.1",
		"league/csv": "^7.2@dev",
		"lucadegasperi/oauth2-server-laravel": "5.2.*",
		"maatwebsite/excel": "^2.1",
		"predis/predis": "^1.1",
		"guzzlehttp/guzzle": "~6.0",
		"elasticsearch/elasticsearch": "~5.0",
		"jsq/amazon-es-php": "^0.2.0",
		"lesstif/php-jira-rest-client": "^1.19.8"
	},
	"require-dev": {
		"mockery/mockery": "0.9.*",
		"phpunit/phpunit": "~6.0",
		"orchestra/testbench": "3.5.*",
		"orchestra/database": "3.5.*",
		"doctrine/dbal": "^2.5",
		"scriptfusion/phpunit-immediate-exception-printer": "^1"
	},
	"repositories": {
		"lucadegasperi/oauth2-server-laravel": {
			"type": "vcs",
			"url": "https://github.com/fuzz-productions/oauth2-server-laravel"
		},
		"fuzz/magic-box": {
			"type": "vcs",
			"url": "https://github.com/fuzz-productions/magic-box.git"
		}
	},
	"autoload": {
		"psr-4": {
			"Fuzz\\ApiServer\\": "src/",
			"Fuzz\\ApiServer\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": [
			"vendor/bin/phpunit"
		],
		"test-coverage": [
			"vendor/bin/phpunit --coverage-html tests/coverage"
		],
		"open-coverage": [
			"open -a \"Google Chrome\" tests/coverage/index.html"
		]
	}
}
